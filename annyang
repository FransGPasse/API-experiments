<!DOCTYPE html>
<html>
  <head>
    <script src="//cdnjs.cloudflare.com/ajax/libs/annyang/2.6.0/annyang.min.js"></script>
    <script>
      "use strict";
      if (annyang) {
        var hello = function () {
          alert("hej");
        };
        var showSomething = function (tag) {
          alert("You said " + tag + " to me?!");
        };

        var audio = new Audio(
          "https://media.geeksforgeeks.org/wp-content/uploads/20190531135120/beep.mp3"
        );

        var commands = {
          "hello (there)": hello,
          "show me *search": showSomething,
          "play sound": function () {
            audio.play();
          },
        };
        
        annyang.addCommands(commands);
        annyang.setLanguage("en");
        annyang.start();
      }
    </script>
  </head>
  <body></body>
</html>
